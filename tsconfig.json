{
  "compilerOptions": {
    "target": "es2016",
    "outDir":"dist",
    "module": "amd",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@route/*": ["./src/routes/*"],
      "@controller/*": ["./src/controllers/*"],
      "@class/*": ["./src/classes/*"]
    }
  }
}
